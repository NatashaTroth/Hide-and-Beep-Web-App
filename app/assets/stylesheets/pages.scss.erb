.home__logo{
    width: 40vw;
    text-align: center;
}

.main-home{
    background-image:  image_url("homeGrassWithClouds.svg");
}

.home-navigation-buttons{
    display:block;
    margin-top:10vh;
    display: flex;
    flex-direction: column;
 
    &__list-element{
        margin: 2vh auto;
        display: flex;
        justify-content: center;
        
        &:hover{
            transform: scale(1.05);
        }
    }

    &__button{
        text-decoration: none; 
        color: black;
        display: flex;
        justify-content: center;
    }

    @media screen and (max-width: 400px) {
    &__button{
        text-align: center;
        width: 60vw;
    }
}
}


@media screen and (max-width: 850px) {
    .home__logo{
        width: 80vw;
    }
}
