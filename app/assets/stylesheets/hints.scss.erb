@import 'variables';

// Hint Section

.create-hint__section {
    background: $cream;
    box-shadow: 3px 3px 2px #aaaaaa;
    width: 80vw;
    height: 70vh; 
    margin-top: 2vh; 
}

.create-hint__hint-article, .field {
    padding: 20px;
}

.field {
    display: flex;
    flex-direction: column;
    width: 20vw;
}

.hidden {
    display: none;
}

.create-hint__back-button {
    margin: 20px;
}

.create-hint__submitBtn {
    margin-bottom: 20px;
}

.create-hint__textarea {
    height: 10vh;
}

.create-hint__inputfield {
    padding: 5px; 
}

.create-hint__table th {
    width: 50vw;
}