@import 'variables';

// Hints Overview

.create-hint {
    &__hint-article {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;  
        padding-bottom: 5vh;
        width: 80vw;
        height: 60vh;
    }

    &__section {
        margin-top: 5vh;

        form {
            display: grid;
            grid-template-rows: repeat(3, 1fr);
            grid-template-columns: repeat(3, 1fr);
            padding:5vh 5vw 2vh;
        }
    }

    &__form-heading {
        font-size: 18px;
        margin-bottom: 2vh;
    }

    &__longitude {
        grid-row: 1/2;
        grid-column: 1/2;
    }

    &__latitude {
        grid-row: 2/3;
        grid-column: 1/2;
    }

    &__text {
        grid-row: 3/4;
        grid-column: 1/2;
    }

    &__createBtn {
        grid-row: 4/5;
        grid-column: 1/2;
        margin: 20px 0 20px 0;
    }

    &__new-hint-btn {
        text-align: right;
        margin: 50px 0 30px 0;
    }

    &__inputfield {
        line-height: 30px;
        font-size: 18px;
    }

    &__back-btn {
        margin-left: 70px;
    }

    &__backButton {
        margin-right: 20px;
    }
}

.hints-index {

    &__section {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;  
        line-height: 1.6;
        padding: 2vh 2vw;
        margin-top:3vh;
        min-width: 80vw
    }
    
    &__titles {
        display:grid;
        grid-template-rows: 1;
        grid-template-columns: 1fr 1fr 1fr 1fr; 
        grid-auto-flow: column;
        margin-bottom: 2vh;
    }

    &__title-longitude {
        justify-self: start;
    }

    &__list-element {
        display: grid;
        grid-template-rows: 1;
        grid-template-columns: 1fr 1fr 1fr 0.76fr; 
        grid-auto-flow: column;
        align-items: center;
        justify-self: center;
    }

    &__longitude {
        height: 2vh;
        box-shadow: none;
        display: inline-flex;
        align-items: center; 
        justify-self: start;
    }

    &__edit-button, &__delete-button{
        width:50px;
        justify-self: end;
        padding-left: 20px;
    }
}

.field {
    display: flex;
    flex-direction: column;
}
