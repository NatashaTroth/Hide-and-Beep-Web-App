@import 'variables';

// Hints Overview
.create-hint {
    &__hint-article {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;  
        width: 80vw;
        height: 80vh;
    }

    &__section {
        padding: 40px;

        form {
            display: grid;
            grid-template-rows: repeat(5, 1fr);
            grid-template-columns: repeat(1fr 0.2fr 1fr 1fr 1fr 1fr);
            padding:3vh 4vw 2vh;
        }
    }

    &__form-heading {
        font-size: 18px;
    }
    
    &__location-name {
        grid-row: 1/2;
        grid-column: 1/2;
    }

    &__latitude {
        grid-row: 2/3;
        grid-column: 1/2;
    }

    &__longitude {
        grid-row: 3/4;
        grid-column: 1/2;
    }

    &__text {
        grid-row: 4/5;
        grid-column: 1/2;
    }

    &__createBtn {
        grid-row: 5/6;
        grid-column: 1/2;
        margin: 20px 0 20px 0;
    }

    &__new-hint-btn {
        text-align: right;
        margin: 50px 0 30px 0;
    }

    &__inputfield {
        font-size: 18px;
    }

    &__back-btn, &__backButton {
        margin: 4vh 4vw;
    }
    
    &__textarea {
        font-family: 'Sniglet', Verdana, Tahoma, sans-serif;
    }

    &__backBtn-hint-overview {
        margin: 0 1.5vw;
    }

    &__style-textarea {
        margin-top: 10px;
    }
}

.hints-index {
    &__h1 {
        align-self: center;
        margin: 0;
    }

    &__section {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;  
        line-height: 1.6;
        padding: 2vh 2vw;
        min-width: 60vw;
        margin: 50px;
    }
    
    &__titles {
        display:grid;
        grid-template-rows: 1;
        grid-template-columns: 0.74fr 1.89fr 1fr; 
        grid-auto-flow: column;
        margin-bottom: 2vh;
    }

    &__title-number, &__title-order, &__hint-position, &__location-name {
        padding: 10px;
    }

    &__title-longitude {
        justify-self: start;
    }

    &__list-element {
        display: grid;
        grid-template-rows: 1;
        grid-template-columns: 0.5fr 1fr 1fr; 
        grid-auto-flow: column;
        align-items: center;
        justify-self: start;
    }

    &__hint-position {
        padding: 2px;
    }

    &__save-hint-numÂ {
        width: 2vw;
    }

    &__edit-button, &__delete-button{
        width:50px;
        justify-self: end;
        padding-left: 20px;
    }

    &__instructions {
        margin-bottom: 20px;
        font-style: italic;
        font-size: 15px;
    }
}

.field_with_errors {
    padding-top: 10px;
}

.field {
    display: flex;
    flex-direction: column;
}

#map {
    padding-top: 3.5vh;
    height: 50vh; 
    grid-row: 2/6;
    grid-column: 3/8;
}

.hints-index__list-element {
    border: 1px dashed;
    margin: 10px;
    padding: 15px;
}

@media screen and (max-width: 382px) {
    .hints-index__h1 {
        text-align: center;
    }
}

@media screen and (max-width: 750px) {

    .create-hint__section{
        form{
            display:initial;
        }
    }

    .create-hint{
        &__hint-article {
            padding: 20px;
            height: 122vh;
        }

        &__form-heading {
            margin-bottom: 5px;
            margin-top: 10px;
        }
        &__no-time-limit{
            margin-top:10px;
            justify-content: flex-start;
        }

        &__inputfield {
            padding-top: 15px;
        }
    }

    #map {
        margin-bottom: 5vh;
    }
  }