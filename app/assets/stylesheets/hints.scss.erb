@import 'variables';

// Hints Overview

.create-hint {
    &__hint-article {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;  
        display: flex;
        flex-direction:column;
        padding-bottom: 5vh;
    }

    &__section {
        margin-top: 5vh;
        form {
            display: grid;
            grid-template-rows: repeat(3, 1fr);
            grid-template-columns: repeat(3, 1fr);
            padding:5vh 5vw 2vh;
        }
    }

    &__form-heading {
        font-size: 18px;
        margin-bottom: 2vh;
    }
}

.hints-index {

    &__section {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;  
        line-height: 1.6;
        padding: 2vh 2vw;
        margin-top:3vh;
        width: 80vw
    }
    
    &__titles {
        display:grid;
        grid-template-rows: 1;
        grid-template-columns: 1fr 1fr 1fr 1fr; 
        grid-auto-flow: column;
        margin-bottom: 2vh;
    }

    &__title-longitude {
        justify-self: start;
    }

    &__list-element {
        display: grid;
        grid-template-rows: 1;
        grid-template-columns: 1fr 1fr 1fr 0.76fr; 
        grid-auto-flow: column;
        align-items: center;
        justify-self: center;
    }

    &__longitude {
        height: 2vh;
        box-shadow: none;
        display: inline-flex;
        align-items: center; 
        justify-self: start;
    }

    &__edit-button, &__delete-button{
        width:50px;
        justify-self: end;
        padding-left: 20px;
    }
}

.create-hint__new-hint-btn {
    text-align: right;
    margin: 50px 0 30px 0;
}

