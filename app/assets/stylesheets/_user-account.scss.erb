@import 'variables';

.user-account{

    &__h1{
        //margin-left: 15vw;
       // text-align: center;
        align-self: center;
        margin: 0;
    }

    &__section{
        margin-top: 4vh;
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;
        padding: 2vw 2vh;
        
        form{
            display:flex;
            flex-direction: column;
        }
    }

    &__input{
        margin: 10px 0 15px;
    }

    &__submit-button-container{
        align-self: center;
    }

    &__button{
        font-size: 0.99rem;
        padding: 10px;
        margin: 10px 0;
        width: 300px;
        justify-self: center;
        align-self: center;
    }
}
