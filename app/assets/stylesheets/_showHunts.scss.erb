@import 'variables';

.hunt-partici-show{

    &__section{
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;  
        line-height: 1.6;
        padding: 2vh 2vw;
        margin-top:3vh;
        width: 90vw;
    }

    &__titles{
        display: grid;
        grid-template-rows: 1fr;
        grid-template-columns: repeat(5, 1fr);
        justify-items: center;
    }

    &__h2-one, &__h2-two{
        color: $themeOrange;
        font-size: 20px;
        margin-bottom: 2vh;
    }

    &__h2-one{
        grid-row: 1/2;
        grid-column: 1/4;
    }

    &__h2-two{
        grid-row: 1/2;
        grid-column: 4/6;
    }

    &__list-element{
        display: grid;
        grid-template-rows: 1fr;
        grid-template-columns: repeat(5, 1fr);
        grid-auto-flow: column;
        justify-items: center;
        align-items: center;
        
    }
}

