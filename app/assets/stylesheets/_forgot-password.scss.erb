@import 'variables';

.main-forgot-password{
    min-height: 100vh;

}

.forgot-password{

    &__h1{
        color: black;
        font-size: 1.5rem;
        text-align: center;
        margin: 0 0 3vh;
    }

    &__p{
        max-width: 300px;
        text-align: center;
        margin-bottom: 4vh;
    }

    &__form-and-links{
        margin-top: 15vh;
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;
        padding: 2vw 2vh;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    &__error-messages{
        margin-bottom: 20px;
        margin-top: 0;
    }

    &__input-email{
        margin: 10px auto;
        width: 100%;
    }

    &__submit-button{
        font-size: 0.99rem;
        margin-bottom: 30px;
        margin-top: 30px;
    }

    &__nav-buttons{
          display: grid;
          grid-template-columns: repeat(1, 300px);

          a{
            justify-self: center;
            align-self: center;
            text-align: center;
            margin: 5px 0;
          }
          
    }

}

