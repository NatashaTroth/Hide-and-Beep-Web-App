@import 'variables';


.login__h1{
    font-size:25px;
    margin: 0;
    text-align: center;
}


.login-sheepBubble__flex {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 10px;
}

.login__logo {
    width: 50vw;
    margin-top: 0;
}

.login__keyhole-image {
    height: 30vh;
    padding: 20px;
}

.login__sheepWithSpeechBubble {
    width: 30vw;
    padding: 20px;
}

 .login__login-article, .signup__signup-article {
    background: $cream;
    box-shadow: 3px 3px 2px #aaaaaa;
    height: 35vh;

    display: flex;
    flex-grow: 1;
    justify-content: space-around;
    flex-wrap: wrap;
    width: 100%;
    //padding-top: 10px;
    padding: 6vh 2vw;
}

.login__div, .signup__div, .forgotPassword-submitBtn__div, .signup-submitBtn__div {
    padding: 10px;
}

.forgotPassword-submitBtn__div, .signup-submitBtn__div {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.login__submit-button, .signup__submit-button {
    margin-top: 40px;
    font-family: 'Sniglet', Verdana, Tahoma, sans-serif;
}

.login__form-links-container{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}

.login__button, .signup__button{
    padding:7px 0;
    text-align: center;
    box-shadow: none;
    font-size: 0.99rem;
    max-width: 150px;
    margin: 1vh auto;
}

.signup__button{
    margin:0 0 0 1vw;;
}

.login__smaller-print{
    font-size: 0.8rem;
    text-align: center;
}

// MEDIA QUERIES

@media screen and (max-width: 432px) {
    .login__login-article, .signup__signup-article {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;
        height: 60vh;
    }

    .login__sheepWithSpeechBubble {
        width: 100%;
    }
  }
