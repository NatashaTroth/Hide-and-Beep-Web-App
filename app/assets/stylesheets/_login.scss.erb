@import 'variables';

.main-login, .main-signup{
    min-height: 100vh;

   /* form{
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }*/
}

.login__h1, .signup__h1{
    font-size:25px;
    margin: 0;
    text-align: center;
}


.login-sheepBubble__flex, .signup-sheepBubble__flex {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 10px;
}

.login__logo, .signup__logo {
    width: 50vw;
    margin-top: 0;
}

.login__keyhole-image, .signup__keyhole-image {
    height: 30vh;
    padding: 20px;
}

.login__sheepWithSpeechBubble, .signup__sheepWithSpeechBubble {
    width: 450px;
    padding: 20px;
}

 .login__login-article, .signup__signup-article {
    background: $cream;
    box-shadow: 3px 3px 2px #aaaaaa;
    height: 35vh;

    display: flex;
    flex-grow: 1;
    justify-content: space-around;
    flex-wrap: wrap;
    width: 100%;
    //padding-top: 10px;
    padding: 6vh 4vw 28vh;
}

 .signup__signup-article {
  padding: 6vh 4vw 28vh;
 }

.login__div, .signup__div, .forgotPassword-submitBtn__div, .signup-submitBtn__div {
    padding: 10px;
}

.forgotPassword-submitBtn__div, .signup-submitBtn__div {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.login__submit-button, .signup__submit-button {
    margin-top: 40px;
    font-family: 'Sniglet', Verdana, Tahoma, sans-serif;
}

.login__form-links-container, .signup__form-links-container{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: flex-start;
}

.login__button, .signup__button{
    padding:7px 0;
    text-align: center;
    box-shadow: none;
    font-size: 0.99rem;
    max-width: 150px;
    margin: 1vh auto;
    align-self: flex-start;
    margin-left: 0;
}

.signup__button{
    margin-left: 1vw;
//    align-self: flex-start;
  //  display:none;
}

.login__smaller-print{
    font-size: 0.8rem;
    text-align: center;
}

#error_explanation_signup, .alert, .alert-danger{
    color: red;
    grid-row: 1/3;
    grid-column: 3/4;
    margin-top: 2vh;
    font-size: 15px;
}

.alert-success{
    max-width: 150px;
}

// MEDIA QUERIES

@media screen and (max-width: 432px) {
    .login__login-article, .signup__signup-article {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;
        height: 60vh;
    }

    .login__sheepWithSpeechBubble {
        width: 100%;
    }
  }
