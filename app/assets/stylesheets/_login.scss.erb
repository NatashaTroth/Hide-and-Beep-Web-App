@import 'variables';

.login-sheepBubble__flex {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 10px;
}



.login__logo {
    width: 50vw;
    margin-top: 0;
}

.login__keyhole-image {
    height: 30vh;
    padding: 20px;
}

.login__sheepWithSpeechBubble {
    width: 30vw;
    padding: 20px;
}

.login__tab-login, .signIn__tab-signIn {
    background: $themeGreen;
    margin: 0;
    border: none;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    cursor: pointer;
    width:100px;
    height: 8vh;
    font-size: 20px;
    box-shadow:none;
}

 .login__login-article, .signIn__signIn-article {
    background: $cream;
    box-shadow: 3px 3px 2px #aaaaaa;
    height: 35vh;

    display: flex;
    flex-grow: 1;
    justify-content: space-around;
    flex-wrap: wrap;
    width: 100%;
    //padding-top: 10px;
    padding: 6vh 2vw;
}

.login__div, .signIn__div, .forgotPassword-submitBtn__div, .signIn-submitBtn__div {
    padding: 10px;
}

.forgotPassword-submitBtn__div, .signIn-submitBtn__div {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.login__submit-button, .signIn__submit-button {
    margin-top: 40px;
    font-family: 'Sniglet', Verdana, Tahoma, sans-serif;
}

.login__form-links-container{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}

.login__button{
    padding:7px 0;
    text-align: center;
    box-shadow: none;
    font-size: 0.99rem;
    max-width: 150px;
    margin: 1vh auto;
}

.login__smaller-print{
    font-size: 0.8rem;
    text-align: center;
}

// MEDIA QUERIES

@media screen and (max-width: 432px) {
    .login__login-article, .signIn__signIn-article {
        background: $cream;
        box-shadow: 3px 3px 2px #aaaaaa;
        height: 60vh;
    }

    .login__sheepWithSpeechBubble {
        width: 100%;
    }
  }
