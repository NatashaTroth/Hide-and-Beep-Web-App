<main class="main-forgot-password">


  <section class="forgot-password__form-and-links">

  <h1 class="forgot-password__h1">Forgot your password?</h1>
  <p class="forgot-password__p">No problem! Enter your email address and we'll send you instructions on how to reset your password.</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
   
    <div class="forgot-password__error-messages">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

      <div>
        <%= f.label :email, class: "forgot-password__label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"forgot-password__input" %>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: "button forgot-password__submit-button" %>
      </div>
    <% end %>

    <div class="forgot-password__nav-buttons">
      <%= render "devise/shared/links" %>
    </div>
  </section>
</main>