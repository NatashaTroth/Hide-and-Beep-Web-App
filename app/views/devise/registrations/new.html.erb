<main class="main-signup">
    <%= image_tag 'loginLogo.svg', class:"signup__logo" %>

    <div class="signup-sheepBubble__flex">
      
        <%= image_tag 'SheepWithSpeechBubble.svg', class:"signup__sheepWithSpeechBubble" %>
      
        <section>
            <article class="signup__signup-article">
              <div>
                  <h1 class="signup__h1">Sign up:</h1>
                  <%= image_tag 'keyholeWithSheeps.svg', class:"signup__keyhole-image", alt:"Keyhole with sheep" %>
              </div>
        
                <div class="signup__form-links-container">

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                    <div class="signup__email signup__div">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>

                    <div class="signup__password signup__div">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password" %>
                    </div>

                    <div class="signup__password signup__div">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Sign up", class: "button signup__button" %>
                    </div>
                  <% end %>

                  <%= render "devise/shared/links" %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                </div>
              </article>
          </section>
        </div>
  </main>