<p id="notice"><%= notice %></p>

<%= render '/partials/header' %>

<main class="main-hunts-index">
<h1>Hints</h1>

<section class="hunts-index__section">
<table>
  <thead>
    <tr class="create-hint__table">
      <th>Longitude: </th>
      <th>Latitude: </th>
      <th>Text: </th>
      <th>Hunt: </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hints.each do |hint| %>
      <tr>
        <td><%= hint.longitude %></td>
        <td><%= hint.latitude %></td>
        <td><%= hint.text %></td>
        <td><%= hint.hunt_id %></td>
        <td><%= link_to 'Edit', edit_hint_path(hint) %></td>
        <td><%= link_to 'Destroy', hint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= @hunt_id %>
</p>

<%= link_to 'New Hint', new_hint_path(:hunt_id => @hunt_id) %>

</section>
</main>
