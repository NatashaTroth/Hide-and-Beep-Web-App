<%= form_with(model: hint, local: true) do |form| %>
  <% if hint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hint.errors.count, "error") %> prohibited this hint from being saved:</h2>

      <ul>
      <% hint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :longitude, :class => 'create-hint__inputfield' %>
    <%= form.text_field :longitude %>
  </div>

  <div class="field">
    <%= form.label :latitude, :class => 'create-hint__inputfield' %>
    <%= form.text_field :latitude %>
  </div>

  <div class="field">
    <%= form.label :text, :class => 'create-hint__inputfield' %>
    <%= form.text_area :text, :class => 'create-hint__textarea' %>
  </div>

  <div class="field hidden">
    <%= form.label :hunt_id %>
    <%= form.number_field :hunt_id, value: @hunt_id %>
  </div>


  <div class="actions field">
    <%= form.submit :class => 'button create-hint__submitBtn' %>
  </div>
<% end %>
