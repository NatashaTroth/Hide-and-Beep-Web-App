<%= form_with(model: hint, local: true) do |form| %>
  <% if hint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hint.errors.count, "error") %> prohibited this hint from being saved:</h2>

      <ul class="error_explanation__list">
      <% hint.errors.full_messages.each do |message| %>
        <li class="error_explanation__list-element"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field create-hint__div create-hint__order hidden">
    <%= form.label :order, "Hint number", :class => 'create-hint__inputfield create-hunt__form-heading' %>
    <%= form.text_field :order, :class => 'create-hint__textarea', placeholder: "e.g. 1" %>
  </div>

  <div class="field create-hint__div create-hint__location-name">
    <%= form.label :location_name, "Hint location", :class => 'create-hint__inputfield create-hunt__form-heading' %>
    <%= form.text_field :location_name, :maxlength => 15, :class => 'create-hint__textarea', placeholder: "e.g. Behind a tree..." %>
  </div>

  <div class="field create-hint__div create-hint__latitude hidden">
  <%= form.label :latitude, :class => 'create-hint__inputfield create-hunt__form-heading' %>
  <%= form.text_field :latitude, :class => 'create-hint__textarea', :id => 'hint_latitude', placeholder: "e.g. 47.72373" %>
  </div>

  <div class="field create-hint__div create-hint__longitude hidden">
  <%= form.label :longitude, :class => 'create-hint__inputfield create-hunt__form-heading' %>
  <%= form.text_field :longitude, :class => 'create-hint__textarea', :id => 'hint_longitude', placeholder: "e.g. 13.086596" %>
  </div>

  <div class="field create-hint__div create-hint__text">
    <%= form.label :text, "Hint text", :class => 'create-hint__inputfield' %>
    <%= form.text_area :text, :class => 'create-hint__textarea create-hunt__form-heading create-hint__style-textarea', placeholder: "e.g. You will find the next clue in a place..." %>
  </div>

  <div class="field hidden">
    <%= form.hidden_field :hunt_id %>
  </div>

  <div class="actions-button field create-hint__createBtn">
    <%= form.submit :class => 'button create-hint__submitBtn' %>
  </div>

<div id="map" class="create-hint__div"></div>
<% end %>

