<%= form_with(model: hint, local: true) do |form| %>
  <% if hint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hint.errors.count, "error") %> prohibited this hint from being saved:</h2>

      <ul class="error_explanation__list">
      <% hint.errors.full_messages.each do |message| %>
        <li class="error_explanation__list-element"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :longitude %>
    <%= form.text_field :longitude %>
  </div>

  <div class="field">
    <%= form.label :latitude %>
    <%= form.text_field :latitude %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.label :hunt_id %>
    <%= form.number_field :hunt_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
